{
  "name": "@thoughtclan/react-stamp",
  "version": "0.0.2",
  "description": "A simple image builder for React",
  "author": "ThoughtClan",
  "license": "MIT",
  "repository": "ThoughtClan/react-stamp",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=devtest node node_modules/jest/bin/jest.js --verbose",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "konva": "^4.1.2",
    "rc-slider": "^9.1.0",
    "react-color": "^2.18.0",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-konva": "^16.12.0-0",
    "uuid": "^3.4.0"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-image": "^2.0.1",
    "@rollup/plugin-url": "^4.0.1",
    "@svgr/rollup": "^5.1.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.9.0",
    "@types/rc-slider": "^8.6.5",
    "@types/react": "^16.9.18",
    "@types/react-color": "^3.0.1",
    "@types/react-dom": "^16.9.5",
    "@types/uuid": "^3.4.6",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "cross-env": "^6.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "gh-pages": "^2.2.0",
    "jest": "^25.1.0",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-scss": "^2.1.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "sinon": "^8.1.1",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.(test|spec).(ts|tsx|js)"
    ]
  }
}
